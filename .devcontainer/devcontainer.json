{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true,
        "workbench.startupEditor": "none"
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "/workspaces/vscode-quickstart-extension/.devcontainer/extensions/zenml-vscode-quickstart-0.0.1.vsix"
      ]
    },
    "containerEnv": {
      "PYTHONPATH": "/workspaces/vscode-quickstart-extension/.devcontainer/zenmlQuickstart"
    }
  },
  "workspaceFolder": "/workspaces/vscode-quickstart-extension"
}
